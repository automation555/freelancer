<% fields_for :page do |f| -%>
	<p><%= f.label :title %><br />
	<%= f.text_field :title %></p>

	<p><%= f.label :slug %><br />
	<%= f.text_field :slug %></p>

	<p><%= f.label :is_url %>
	<%= f.check_box :is_url %></p>

	<p><%= f.label :url %><br />
	<%= f.text_field :url %></p>

	<p><%= f.label :body %><br />
	<%= f.text_area :body, :class => 'wide tall' %></p>

	<%= form_model_buttons @page %>
<% end -%>
